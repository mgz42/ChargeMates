<div class="container">
<div class="station-main-titre mt-3 w-100 text-center mb-2">Mes Mates</div>

<div class="container-bookings">
  <% if @bookings.present? %>
    <% @bookings.each do |booking| %>



          <% if booking.vehicle.user_id == current_user.id %>
            <% if booking.status == 'en_attente_de_confirmation' %>
              <div class="col-12">
              <div class="p-2"></div>
              <div class="carte-index-booking m-1 ">
              <%= render partial: 'card_owner_new', locals: { booking: booking } %>
              </div>
              </div>
            <% else %>
              <div class="col-12">
              <div class="p-2"></div>
              <div class="carte-index-booking m-1 ">
              <%= render partial: 'card_owner', locals: { booking: booking } %>
              </div>
              </div>
            <% end %>
          <% else %>
            <% if booking.status != 'en_attente_de_confirmation' && booking.status != 'en_attente_de_soumission'%>
              <div class="col-12">
              <div class="p-2"></div>
              <div class="carte-index-booking m-1 ">
              <%= render partial: 'card_customer', locals: { booking: booking } %>
              </div>
              </div>
            <% end %>
          <% end %>




    <% end %>
  <% else %>
    <div class="col-12">
      <p class="ps-3 pe-3">Vous n'avez pas de rÃ©servations pour le moment.</p>
    </div>
  <% end %>
  <div class="mt-5 pt-5"></div>
</div>
</div>
