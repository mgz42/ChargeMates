
<% if booking.en_attente_de_validation? %>
  <%= button_to 'Accepter offre', booking_path(booking), method: :patch, class: 'accepter btn btn-success' %>
  <%= button_to 'Refuser offre', booking_path(booking), method: :patch, class: 'refuser btn btn-danger' %>
<% elsif booking.en_attente_de_paiement? %>
  <p>En attente de paiement de <%= booking.vehicle.user.username %>.</p>
<% elsif booking.en_attente_de_charge?  %>
  <p class="date-heure-reservationcard p-2">  N'hesitez pas à donner un maximum de détails à <%= booking.vehicle.user.username %>, afin de faciliter l'accés a votre station de recharge.  </p>
<% elsif booking.en_charge?  %>
  <p>en cours de charge</p>
<% elsif booking.termine?  %>
<% end %>
