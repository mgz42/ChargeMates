
<div class="carte-index-booking-background-image" <% if booking.station.photo.attached? %> style="background-image: url('<%= cl_image_path(booking.station.photo.key, crop: :fill) %>')"<% end %>> </div>

<div class="carte-index-booking-avatar" <% if booking.vehicle.user.photo.attached? %> style="background-image: url('<%= cl_image_path(booking.vehicle.user.photo.key, crop: :fill) %>')" <% end %>> </div>


      <% feuille_user = booking.vehicle.user.xp < 25000 ? Badge.f[0] : booking.vehicle.user.xp < 50000 ? Badge.f[1] : booking.vehicle.user.xp < 75000 ? Badge.f[2] : Badge.f[3] %>
      <div class="feuille-bookings-show" style="background-image: url('<%= feuille_user%>');"></div>


<div class="date-absolute-booking"><%= booking.created_at.strftime("%d-%m-%Y") %></div>

<%# <i class="fa-brands fa-envira"></i> %>
  <div class="carte-index-booking-content">
    <div class="carte-index-booking-infos">
      <img src="https://i.ibb.co/Rj0NcB2/voiture-de-sport-1.png" class="badge-car-station-booking-prise" alt="plug">
      <%# <h4><%= booking.vehicle.user.username.capitalize </h4> %>

      <%# ci dessous variables PUIS nom, niveau et barre %>
        <%
          userLevel = (booking.vehicle.user.xp.to_f / 1000).floor
        %>

        <div class="d-flex flex-column">
              <div class="station-username d-flex align-items-end ms-3 ps-1"><%= booking.vehicle.user.username.capitalize %> <div class="station-username-level ps-1"><%= userLevel %></div></div>
        </div>

    </div>
    <% bouton_texte = booking.status != "en_attente_de_soumission" ? "Consulter" : "Reserver" %>
    <%# Ã  remplacer par booking_path(@booking) %>
    <%= link_to bouton_texte, booking_path(booking), class: "btn bouton-index-booking" %>
  </div>
