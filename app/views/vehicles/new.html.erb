<div class="container">
<div class="container-new-vehicle py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white form-creation-vehicle p-3 shadow m-0" data-controller="form-update">
        <h3>Ma voiture</h3>
        <%= simple_form_for [@user, @vehicle] do |f| %>
          <%= f.input :brand, label: 'Marque', collection: @car_list.keys, prompt: 'Sélectionner une marque', input_html: { data: { action: 'change->form-update#updateModels' } }  %>
          <%= f.input :model, label: 'Modèle', collection: @all_car_models, prompt: 'Sélectionner un modèle', input_html: { data: { form_update_target: 'modelSelect' } } %>
          <%= f.input :model_year, label: 'Année du modèle', placeholder: 'Année de sortie du modèle' %>
          <%= f.input :immatriculation, placeholder: 'Mon immatriculation' %>
          <div class="btn bouton-creation-voiture">
            <%= f.submit 'Ajouter ma voiture'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <%= link_to user_path(1) do %>
    <i class="fa-solid fa-chevron-left boutonderetour-forms"></i>
  <% end %>

</div>
