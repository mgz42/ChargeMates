<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white form-creation-vehicle p-3 shadow">
        <h3>Ma voiture</h3>
        <%= simple_form_for [@user, @vehicle] do |f| %>
          <%= f.input :brand, placeholder: 'Marque de ma voiture' %>
          <%= f.input :model, placeholder: 'Modèle de ma voiture' %>
          <%= f.input :model_year, placeholder: 'Année de sortie du modèle' %>
          <%= f.input :immatriculation, placeholder: 'Mon immatriculation' %>

          <%= f.submit class: 'btn bouton-creation-voiture' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
