<div class="mobile-scroll-container">
  <div class="container my-profil">
    <div class="row mt-3">
      <div class="col-md-12 d-flex justify-content-center align-items-start">
        <div class="d-flex flex-column align-items-center">
          <div class="avatar-placeholder rounded-circle"></div>
        </div>
        <div class="flex-grow-1 ml-3 d-flex flex-column justify-content-end align-items-end">
          <div class="station-username d-flex align-items-end mt-2 text-end">
            <h5 class="username-badge"><%= current_user.username %></h5>
          </div>
          <% mateType = current_user.xp < 25000 ? "Mate Débutant" : current_user.xp < 50000 ? "Mate Avancé" : current_user.xp < 75000 ? "Super Mate" : "Top Mate" %>
          <div class="mate-type-user text-end"><%= mateType %> <%= current_user.xp / 1000 %></div>
          <div class="station-username-level ps-1"></div>
          <% barreColor = current_user.xp < 25000 ? "#CAD82E" : current_user.xp < 50000 ? "#5EA482" : current_user.xp < 75000 ? "#FECD4F" : "#FE9751" %>
          <% barreLength = (current_user.xp.to_f / 1000) %>
          <div class="barre-de-niveau-station" style="--width-barre: <%= barreLength %>%; --color-barre: <%= barreColor %>;"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="barregrise"></div>

    <div class="text-center">
      <h1><strong>Classement</strong></h1>
      <h2>Top France</h2>
      <p class="policejaune"><strong><%= @current_user_rank %> / <%= @total_users_count %></strong> - <strong><%= current_user.xp %></strong> XP</p>
    </div>
    <div class="d-flex justify-content-center">
      <!-- Première carte -->
      <div class="card text-white bg-primary mb-3 align-items-center mx-2" style="max-width: 7rem;">
        <div class="card-header text-center">Partagé</div>
        <div class="card-body">
          <h5 class="card-title"> <!-- Remplacez ceci par le contenu dynamique si nécessaire --> </h5>
          <h4 class="card-text text-center"><%= current_user.bookings.count %></h4>
        </div>
      </div>
      <!-- Deuxième carte -->
      <div class="card text-white bg-primary mb-3 align-items-center mx-2" style="max-width: 7rem;">
        <div class="card-header text-center">économisé</div>
        <div class="card-body">
          <h5 class="card-title"> <!-- Remplacez ceci par le contenu dynamique si nécessaire --> </h5>
          <h4 class="card-text text-center"><%= current_user.bookings.count * 8.55 %> €</h4>
        </div>
      </div>
    </div>
  </div>

  <div class="barregrise"></div>

  <div class="container d-flex justify-content-center my-3">
    <div class="card text-white bg-primary mb-3 align-items-center custom-card" style="width: 20rem;">
      <div class="card-body">
        <div class="d-flex justify-content-center space-between">
          <%= link_to "Ajouter voiture", new_vehicle_path, class: "btn btn-primary"%>
        </div>
        <hr>
        <div class="mt-3 ">
          <% current_user.vehicles.each do |vehicle| %>
            <%= link_to edit_vehicle_path(vehicle), class: "text-decoration-none text-reset", style: "cursor: pointer", title: "Modifier #{vehicle.brand} #{vehicle.model}", data: { toggle: "tooltip" }, "aria-label": "Modifier #{vehicle.brand} #{vehicle.model}" do %>
              <div class="d-flex align-items-center justify-content-between">
                <% Vehicle.car_list.each do |key, value| %>
                  <% if vehicle.brand == key %>
                    <img src="<%= value["Logo_url"] %>" alt="<%= vehicle.brand %> logo" class="mr-3" style="max-width: 3rem; max-height: 3rem;">
                    <p class="mr-3"><strong><%= vehicle.brand %> <%= vehicle.model %></strong></p>
                    <img src="<%= value["Logo_prise_url"] %>" alt="<%= value["Type_prise"] %> logo" class="ml-3" style="max-width: 2rem; max-height: 2rem;">
                  <% end %>
                <% end %>
              </div>
            <% end %>
            <hr>
          <% end %>
          <% if current_user.vehicles.empty? %>
            <p class="text-center">Vous n'avez aucun véhicule.</p>
          <% end %>
        </div>
        <% if current_user.station.present? %>
          <div class="d-flex justify-content-center">
            <%= link_to "Ajouter wallbox", new_station_path, class: "btn btn-primary"%>
          </div>
          <hr>
          <p><strong><%= current_user.station.brand %> <%= current_user.station.model %> <%= current_user.station.plug %></strong></p>
        <% end %>
      </div>
    </div>
  </div>


  <div class="barregrise"></div>

  <div class="col-md-12-historique">
  <div class="container mes-bookings">
    <div class="row justify-content-center"> <!-- Centrer les cartes -->
      <div class="col-md-8"> <!-- Taille de la carte -->
        <h1 class="text-center"><strong>Historique</strong></h1>
        <div class="mt-3">
          <% if current_user.vehicles.any? %>
            <% current_user.vehicles.each do |vehicle| %>
              <% vehicle.bookings.each do |booking| %>
                <div class="card mb-3">
                  <!-- Enveloppez le contenu de chaque réservation dans une balise <a> avec un lien vers la page de détails de la réservation -->
                  <a href="<%= booking_path(booking) %>" class="text-decoration-none text-reset">
                    <div class="card-body-historique d-flex align-items-center">
                      <div class="avatar-placeholder rounded-circle me-3"></div> <!-- Avatar Placeholder -->
                      <div class="booking-details flex-grow-1 d-flex justify-content-between align-items-center">
                        <p class="booking-date mb-0"><strong><%= booking.date_heure_reservation.strftime("%d/%m/%Y") %></strong></p> <!-- Date -->
                        <p class="booking-duration mb-0"><strong><%= booking.duree_recharge %></strong></p> <!-- Durée de recharge -->
                        <p class="booking-status mb-0">
                          <% if booking.status == "en attente" %>
                            <i class="far fa-hourglass-half ms-2"></i>
                          <% elsif booking.status == "acceptée" %>
                            <i class="far fa-check-circle ms-2"></i>
                          <% end %>
                        </p> <!-- Statut -->
                        <p class="booking-status-text"><%= booking.status %></p>
                      </div>
                    </div>
                  </a>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="row">
              <div class="col text-center">
                <p>Vous n'avez aucune réservation</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
